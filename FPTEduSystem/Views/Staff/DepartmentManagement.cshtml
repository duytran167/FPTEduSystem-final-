@model IEnumerable<FPTEduSystem.Models.Department>
@{
	ViewBag.Title = "DepartmentManagement";
}

<h2>Department Management</h2>
@Html.ActionLink("Back", "Index", "Staff", null, new { @class = "btn btn-primary" })

<br />

@Html.ActionLink("Create Department", "CreateDepartment", "Staff", null, new { @class = "btn btn-success" })

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Department Name</th>
			<th scope="col">Detail</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.DepartmentName</td>
				<td>@item.Detail</td>
				<td>
					@Html.ActionLink("Edit", "EditDepartment", "Staff",
											 new { id = item.Id },
											 new { @class = "btn btn-warning" })
					@Html.ActionLink("Delete", "DeleteDepartment", "Staff",
											 new { id = item.Id },
											 new { @class = "btn btn-danger" })
					@Html.ActionLink("Details", "DetailDepartment", "Staff",
											 new { id = item.Id },
											 new { @class = "btn btn-primary" })
					@Html.ActionLink("Assign", "AssignDepartment", "Staff",
											 new { id = item.Id },
											 new { @class = "btn btn-success" })
				</td>
			</tr>
		}
	</tbody>
</table>

