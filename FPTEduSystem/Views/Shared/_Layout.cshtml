<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("FPT EDU", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					@if (Request.IsAuthenticated)
					{

						if (User.IsInRole("Admin"))
						{
							<li>@Html.ActionLink("Admin", "Index", "Admin")</li>
							<li>@Html.ActionLink("Manage Staff", "StaffView", "Admin")</li>
							<li>@Html.ActionLink("Manage Trainer", "TrainerView", "Admin")</li>


						}
						if (User.IsInRole("Staff"))
						{
							<li>@Html.ActionLink("Trainer", "TrainerManagement", "Staff")</li>
							<li>@Html.ActionLink("Trainee", "TraineeManagement", "Staff")</li>
							<li>@Html.ActionLink("Course", "CourseManagement", "Staff")</li>
							<li>@Html.ActionLink("Category", "CategoryView", "Staff")</li>
							
							<li>@Html.ActionLink("My Profile", "Index", "Staff")</li>





						}
						if (User.IsInRole("Trainer"))
						{
							<li>@Html.ActionLink("Trainer", "Index", "Trainer")</li>
							<li>@Html.ActionLink("All Course", "CourseAssign", "Trainer")</li>
							


						}
						if (User.IsInRole("Trainee"))
						{
							<li>@Html.ActionLink("Trainee", "Index", "Trainee")</li>
							<li>@Html.ActionLink("All Course", "AllCourse", "Trainee")</li>


						}
					}
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - FPT EDUCATION</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>