@model FPTEduSystem.Models.Department
@{
	ViewBag.Title = "EditDepartment";
}

<h2>Edit Department</h2>
@Html.ActionLink("Back To Course", "DepartmentManagement", "Staff", null, new { @class = "btn btn-primary" })
<br>
@using (Html.BeginForm("EditDepartment", "Staff", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(m => m.DepartmentName, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.EditorFor(m => m.DepartmentName, new { @class = "form-control" })
			<br />
			@Html.ValidationMessageFor(model => model.DepartmentName, " *required", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Detail, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.EditorFor(m => m.Detail, new { @class = "form-control" })
			<br />
			@Html.ValidationMessageFor(model => model.Detail, " *required", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-primary" value="Edit" />
		</div>
	</div>
}

